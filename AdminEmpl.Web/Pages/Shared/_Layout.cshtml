<!--Este layout se muestra automáticamente ya que es la que está conectado con el método principal de visualización.-->
<!--El layout se encuentra en la carpeta shared y el principal se define como _Layout.cshtml-->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdminEmpl.Web</title>
    <!--Razor permite implementar variables por medio de la propiedad Arroba más el objeto, por ejemplo con ViewData se puede declarar una variable.-->
    <!--En ViewData más ["NomVar"] se puede asignar un valor en la parte de impresión osea la que utilize el layout-->
    <!--Estilos-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">AdminisEmpleados</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacidad</a>
                        </li>
                        <!--Añadimos la referencia de la parte de empleados.-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Empleados/Index">Empleados</a>
                        </li>
                        <!--Añadimos la referencia de la parte de añadir empleados.-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Empleados/Editar">Agregar empleado</a>
                        </li>
                        <li class="nav-item">
                            <div>
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Detalles de empleado
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <a class="dropdown-item" asp-area="" asp-page="/EFCRUDEmpl/Index">Listado de empleados</a>
                                    <a class="dropdown-item" asp-area="" asp-page="/EFCRUDEmpl/Create">Crear empleados</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <!--El método RenderBody renderiza la página que use el layout.-->
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AdminisEmpleados - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <!--Scripts js que define por defecto MVVM-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--Con el modelo MVVM se incluyen las librerías jquery, bootstrap y el site (el cual lo define el desarrollador)-->
    @RenderSection("Scripts", required: false)
</body>
</html>
